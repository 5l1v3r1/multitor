#!/usr/bin/env bash

# shellcheck shell=bash

# ``````````````````````````````````````````````````````````````````````````````
# Function name: CreateProxyProcess()
#
# Description:
#   It creates tor load balancer with haproxy.
#
# Usage:
#   CreateProxyProcess
#
# Examples:
#   CreateProxyProcess
#

function CreateProxyProcess() {

  # shellcheck disable=SC2034
  local _FUNCTION_ID="CreateProxyProcess"
  local _STATE=0

  local _bk_port_new=0
  local _proxy_http_state=0

  # shellcheck disable=SC2154
  for _bk_port in "${_proxy_ports[@]}" ; do

    if [[ "$proxy_type" == "http" ]] ; then

      # shellcheck disable=SC2034
      _bk_port_new=$((_bk_port - 1000))

      _pfd="${_tml_po1}.${_bk_port_new}"

      # shellcheck disable=SC2154
      cp "${_tml_po0}" "${_pfd}"

      # shellcheck disable=SC2154,SC2129
      printf "logfile privoxy.%d\\n" "$_bk_port_new" \
      >>"${_pfd}"

      # shellcheck disable=SC2154,SC2129
      printf "listen-address 127.0.0.1:%d\\n" "$_bk_port_new" \
      >>"${_pfd}"

      # shellcheck disable=SC2154,SC2129
      printf "forward-socks5t / 127.0.0.1:%d .\\n" "$_bk_port" \
      >>"${_pfd}"

      _proxy_http_state=1

      _logger "info" \
        "${_FUNCTION_ID}()" \
        "added backend port for privoxy: '$_bk_port'"

      # hpts -s 127.0.0.1:"${_bk_port}" -p "${_bk_port_new}" &

      privoxy "${_pfd}"

    fi

    if [[ "$_proxy_http_state" -eq 1 ]] ; then

      # shellcheck disable=SC2154
      printf "  server            http-process-%d 127.0.0.1:%d check fall 3 rise 2\\n" "$_bk_port_new" "$_bk_port_new" \
      >>"${_tml_ha1}"

      _logger "info" \
        "${_FUNCTION_ID}()" \
        "added backend port for haproxy + privoxy: '$_bk_port_new'"

    elif [[ "$proxy_type" == "socks" ]] ; then

      # shellcheck disable=SC2034
      _bk_port_new="$_bk_port"

      # shellcheck disable=SC2154
      printf "  server            socks-process-%d 127.0.0.1:%d check fall 3 rise 2\\n" "$_bk_port" "$_bk_port_new" \
      >>"${_tml_ha1}"

      _logger "info" \
        "${_FUNCTION_ID}()" \
        "added backend port for haproxy: '$_bk_port'"

    fi

  done

  # shellcheck disable=SC2154
  # Init proxy process.
  haproxy -f "${_tml_ha1}" && \
  _logger "info" \
    "${_FUNCTION_ID}()" \
    "init proxy process with '${_tml_ha1}' config file"

  return $_STATE

}
